{
    "name": "edgy",
    "version": "1.0.0",
    "description": "A simple RESTful API adapter based on resources.",
    "main": "lib/index.js",
    "scripts": {
        "watch": "gulp",
        "test": "gulp test",
        "test:watch": "ava --watch --verbose",
        "test:browser": "mocha-phantomjs ./tests/browser/index.html",
        "test:browser-local": "npm run test:browser -- -R list -p /usr/local/bin/phantomjs",
        "start:server": "node ./server/index.js &",
        "stop:server": "kill $(lsof -i :3345 | awk 'FNR == 2 { print $2 }')",
        "build": "gulp webpack"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/labsvisual/edgy.git"
    },
    "keywords": [
        "rest",
        "api",
        "js",
        "nodejs",
        "adapter",
        "react",
        "angular",
        "ng",
        "restful",
        "async",
        "promises"
    ],
    "author": "Shreyansh Pandey",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/labsvisual/edgy/issues"
    },
    "homepage": "https://github.com/labsvisual/edgy#readme",
    "devDependencies": {
        "@babel/core": "^7.1.0",
        "@babel/polyfill": "^7.0.0",
        "@babel/preset-env": "^7.1.0",
        "@babel/register": "^7.0.0",
        "ava": "1.0.0-beta.8",
        "babel-loader": "^8.0.2",
        "del": "^3.0.0",
        "gulp": "^4.0.0",
        "gulp-ava": "^0.19.0",
        "gulp-cli": "^2.0.1",
        "gulp-concat": "^2.6.1",
        "gulp-plumber": "^1.2.0",
        "gulp-rename": "^1.4.0",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-uglify": "^3.0.1",
        "gulp-util": "^3.0.8",
        "hapi": "^17.6.0",
        "hapi-auth-jwt2": "^8.1.0",
        "jsonwebtoken": "^8.3.0",
        "mocha-phantomjs": "^4.1.0",
        "uglifyjs-webpack-plugin": "^2.0.1",
        "webpack": "^4.19.1"
    },
    "ava": {
        "failFast": false,
        "babel": {
            "testOptions": {
                "babelrc": false
            }
        },
        "require": [
            "./setup.js"
        ],
        "files": [
            "./tests/node/**/*.js"
        ],
        "sources": [
            "./lib/**/*.js"
        ]
    }
}
